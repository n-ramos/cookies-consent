{
  "name": "@n-ramos/cookie-consent",
  "version": "1.1.0",
  "description": "RGPD-compliant cookie consent manager with CDN WebComponent and NPM API",
  "license": "MIT",
  "type": "module",
  "main": "./dist/cookie-wall.umd.js",
  "module": "./dist/cookie-wall.es.js",
  "exports": {
    ".": {
      "import": "./dist/cookie-wall.es.js",
      "require": "./dist/cookie-wall.umd.js"
    },
    "./cdn": "./dist/cookie-consent-standalone.js"
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:watch": "vitest --watch",
    "test:run": "vitest --run",
    "test:coverage": "vitest --coverage",
    "dev": "vite --config vite.demo.config.ts",
    "build:lib": "vite build",
    "build:cdn": "vite build --config vite.config.standalone.ts",
    "build": "pnpm typecheck && pnpm lint && pnpm build:lib && pnpm build:cdn",
    "lint": "eslint .",
    "format": "prettier -w .",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "check": "pnpm typecheck && pnpm lint"
  },
  "dependencies": {
    "alpinejs": "^3.14.9"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@tailwindcss/vite": "^4.0.0",
    "@vitest/ui": "^4.0.16",
    "@vitest/coverage-v8": "^4.0.16",
    "happy-dom": "^20.0.11",
    "prettier": "^3.4.2",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.49.0",
    "vite": "^6.0.7",
    "vitest": "^4.0.16"
  },
  "publishConfig": {
    "access": "public"
  }
}
